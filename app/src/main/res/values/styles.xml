<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Table_Text_Base">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">1dp</item>
        <item name="android:paddingEnd">1dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Table_Text_Header" parent="Table_Text_Base">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/fg_dark</item>
    </style>

    <style name="Table_Text_Numeric" parent="Table_Text_Base">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Table_Text_Row_Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/keyline_small</item>
        <item name="android:paddingEnd">@dimen/keyline_small</item>
        <item name="android:layout_marginTop">@dimen/keyline_small</item>
        <item name="android:layout_marginBottom">@dimen/keyline_smaller</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Button_Outline" parent="Widget.MaterialComponents.Button.OutlinedButton" />

    <style name="Table_Button_Simple" parent="Button_Outline">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/fg_dark</item>
    </style>

    <style name="DangerousDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/DangerousButtonStyle</item>
    </style>
    <style name="DangerousButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/app_error</item>
    </style>
    <style name="TitleSection_Dark">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>