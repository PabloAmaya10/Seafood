<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_seafood_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:paddingBottom="2dp">

    <TextView
        android:id="@+id/row_tv_food"
        style="@style/Table_Text_Numeric"
        app:layout_constraintEnd_toStartOf="@+id/row_tv_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/row_tv_price" />

    <TextView
        android:id="@+id/row_tv_price"
        style="@style/Table_Text_Numeric"
        app:layout_constraintEnd_toStartOf="@+id/row_et_amount"
        app:layout_constraintStart_toEndOf="@+id/row_tv_food"
        app:layout_constraintTop_toTopOf="@+id/row_et_amount" />

    <EditText
        android:id="@+id/row_et_amount"
        android:inputType="number"
        style="@style/Table_Text_Numeric"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/row_tv_price"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>